<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/sample_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="16dp" />

    <Button
        android:id="@+id/btnArm"
        android:layout_width="411dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="解锁"
        app:layout_constraintTop_toBottomOf="@+id/btnLand"
        tools:layout_editor_absoluteX="0dp" />

    <Button
        android:id="@+id/btnDisArm"
        android:layout_width="411dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp"
        android:text="闭锁"
        app:layout_constraintTop_toBottomOf="@+id/btnArm"
        tools:layout_editor_absoluteX="0dp" />

    <Button
        android:id="@+id/btnRtl"
        android:layout_width="411dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="返航"
        app:layout_constraintTop_toBottomOf="@+id/btnDisArm"
        tools:layout_editor_absoluteX="0dp" />

    <Button
        android:id="@+id/btnLand"
        android:layout_width="411dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="降落"
        app:layout_constraintTop_toBottomOf="@+id/btnTakeOff"
        tools:layout_editor_absoluteX="0dp" />

    <Button
        android:id="@+id/btnTakeOff"
        android:layout_width="411dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="58dp"
        android:text="起飞"
        app:layout_constraintTop_toBottomOf="@+id/sample_text"
        tools:layout_editor_absoluteX="0dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="20dp" />

</androidx.constraintlayout.widget.ConstraintLayout>